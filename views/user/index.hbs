<section>
    <div class="container" style="margin-top: 10rem;">
        <div class="row mt-3">
            {{#each products}}

            <div class="col-md-3">
                <div class="card" style="width: 18rem; height: 25rem;">
                    <img src="/images/product-images/{{this._id}}.jpeg" class="card-img-top" alt="..." style="height:10rem ;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <h6 class="card-title">{{this.Category}}</h6>
                        <h6 class="card-title">{{this.Stock}}</h6>
                        <h6 class="card-title">Rs :{{this.Price}}<span>/day</span></h6>

                        <a href="/cart" class="btn btn-primary">Add To Cart</a>
                    </div>
                </div>

            </div>
            {{/each}}
        </div>
        
    </div>
</section>